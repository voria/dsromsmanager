# Contributor: Fortunato Ventre (voRia) <vorione AT gmail DOT com>

pkgname=('dsromsmanager' 'dsromstrimmer')
pkgbase="dsromsmanager"
pkgver=1.4
pkgrel=1
url="http://www.voria.org/dsromsmanager/"
license=('GPLv3')
source=(http://www.voria.org/files/nds/dsromsmanager/$pkgname-$pkgver.tar.gz)
md5sums=('eb6c09ce97a3d123327886157782494b')
arch=('any')

build() {
	# Copy sources
	cp -r ${srcdir}/dsromsmanager-${pkgver} ${srcdir}/dsromstrimmer-${pkgver}
}

package_dsromsmanager() {
	pkgdesc="Nintendo DS Roms Manager"
	arch=('any')
	depends=('pygtk')
	optdepends=('dsromstrimmer: for NDS roms trimming')
	
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" manager_install || return 1
}

package_dsromstrimmer() {
	pkgdesc="Nintendo DS Roms Trimmer"
	arch=('i686' 'x86_64')
	
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" trimmer_install || return 1
}
